<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head') %>

  <body>
    <div class="container vh-100">
      <div class="row h-100">
        <div class="col-3"></div>
        <div class="col-6">
          <form
            method="POST"
            action="/server"
            encType="multipart/form-data"
            class="myCard my-4"
          >
            <div>
              <img
                src="images/NSE_IT.png"
                class="rounded mx-auto d-block mt-5 mb-3 logo"
                alt="NSE_IT"
              />
              <h1 class="h2 font-weight-normal text-center mb-3">
                Tools Automation
              </h1>
              <div
                class="container d-flex justify-content-center align-items-center"
              >
                <div class="progresses">
                  <div>
                    <a href="/" class="steps">
                      <span class="font-weight-bold">1</span>
                    </a>
                  </div>

                  <span class="line"></span>

                  <div>
                    <a href="version" class="steps">
                      <span class="font-weight-bold">2</span>
                    </a>
                  </div>

                  <span class="line"></span>

                  <div>
                    <a href="#" class="steps">
                      <span class="font-weight-bold">3</span>
                    </a>
                  </div>

                  <span class="line"></span>

                  <div>
                    <a href="#" class="steps-outline">
                      <span class="font-weight-bold">4</span>
                    </a>
                  </div>
                </div>
              </div>

              <div class="content">
                <!-- ip -->
                <label for="ip" class="form-label mt-4 bs-secondary-color"
                  >Server Ip Address</label
                >
                <input
                  type="text"
                  class="form-control mb-2"
                  id="ip"
                  name="ip"
                  value="<%= serverDetails.ip %>"
                  placeholder="eg: 76.2.210.118"
                />
                <p id="ipError" class="text-danger font-weight-bold error">
                  <%= ipError %>
                </p>

                <!-- username -->
                <label for="userName" class="form-label bs-secondary-color"
                  >UserName</label
                >
                <input
                  type="text"
                  class="form-control form-control-sm mb-2"
                  id="userName"
                  name="username"
                  value="<%= serverDetails.username %>"
                  placeholder="eg: ubuntu"
                />
                <p
                  id="userNameError"
                  class="text-danger font-weight-bold error"
                >
                  <%= userNameError %>
                </p>

                <!-- key -->
                <label for="key" class="form-label bs-secondary-color"
                  >Private key</label
                >
                <input
                  type="file"
                  class="form-control"
                  id="key"
                  name="key"
                  placeholder="choose file"
                />
                <p id="keyError" class="text-danger font-weight-bold error">
                  <%= keyError %>
                </p>
              </div>
            </div>

            <!-- href="step4.html" -->
            <input
              type="submit"
              class="button-success my-3 text-center w-25"
              value="Login"
            />
          </form>
        </div>
        <div class="col-3"></div>
      </div>
    </div>

  </body>
</html>
